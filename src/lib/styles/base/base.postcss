@layer base
{
	* { @apply !outline-none select-none drag-none;
		-webkit-tap-highlight-color: transparent;
	}
	html { @apply font-base overflow-x-hidden }
	body { @apply bg-gray-900 text-gray-300 overflow-x-hidden }
	a { @apply duration-150 }
	svg { @apply inline-block }
	b, strong { @apply font-medium }
	img {
		font-size: 0;
		box-shadow: inset 0 0 1rem theme(colors.gray.800);
	}
}
